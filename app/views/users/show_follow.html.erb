<div class="container">
  <div class="row">
	  <div class="col-md-6">
<h1>Follow Users</h1>
<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th colspan="3"></th>
      <th colspan="4"></th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
      <td><%= user.name %> </td>
      <td><%= "フォロー数: #{user.follower.count}" %></td>
			<td><%= "フォロワー数: #{user.followed.count}" %></td>
			<td><%= link_to "Show", user_path(user), class: "user_#{user.id}" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>